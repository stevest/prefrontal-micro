
strdef savefilename
proc save_membrane_voltage()  { local i 
	for (i=0;i<nPCcells;i=i+1) {
		vsoma[i] = new File()		
		sprint(savefilename,"experiment_%d/%s/%d_%d_%d.txt", $3,EXP,$2,i, runs) 
		vsoma.wopen(savefilename)
		for sb=0, volt.size()-1 { 
			vsoma.printf ("%f\n",volt[i].x[sb])
		}
		vsoma.close()
	}
}

