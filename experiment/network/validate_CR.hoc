objref CRns,CRsw
proc noise() { local i
	CRcells.o(0).soma {
			CRns = new Random($1+3) 
			CRns.poisson(0.35)
			CRsw = new membNoise(0.5)
			CRsw.del=0
			CRsw.dur=tstop
			CRsw.freq = 80
			CRsw.bias = 0//-0.007
			CRsw.getRandObjPtr(CRns)
		 
	}
