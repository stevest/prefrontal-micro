objref cr_nmda[14], cr_ampa[14], nc_ampa[14], nc_nmda[14],nc_gabaa[14], cr_gabaa[14]
cr_w_nmda = 0.000145//As in RS:NMDA amp=52.1 pA as in Wang, Gao , 2009
cr_w_ampa = 0.00012 //As in RS:AMPA amp=54.9 pA as in Wang, Gao , 2009

	
proc CRNMDA_AMPA() { local PID localobj r
	r = new Random(150+$1)
	PID = r.uniform(0,1)
	for syn = 0, 7-1{ //PC2CR 7 synapses, Xenia
		if($2==1){
			CRcells.o(0).dend {cr_nmda[syn] = new NMDA(PID)}
			nc_nmda[syn]  = new NetCon(ns, cr_nmda[syn])
			nc_nmda[syn].delay =400
			nc_nmda[syn].weight = cr_w_nmda
			nc_nmda[syn].threshold = -20
		}else{
			CRcells.o(0).dend {cr_ampa[syn] = new GLUIN(PID)}
			nc_ampa[syn]  = new NetCon(ns, cr_ampa[syn])
			nc_ampa[syn].delay = 400
			nc_ampa[syn].weight = cr_w_ampa
			nc_ampa[syn].threshold = -20
		}
	}
}


