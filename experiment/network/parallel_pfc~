#!/bin/sh

pkill -9 nrniv

res1=$(date +%s.%N)


#../../mechanism/$(arch)/special final.hoc -
#mpiexec -np 6 ../../mechanism/$(arch)/special -mpi -c "PARALLEL=1" final.hoc -
# -mca btl ^openib flag inhibit the search for infiniband hardware
mpirun -n 24 -mca btl ^openib ../../mechanism_simple/$(arch)/special -mpi  -nobanner -c "PARALLEL=1" -c "SIMPLIFIED=0" final.hoc  
#mpiexec -np 24 nrniv -mpi -dll .

res2=$(date +%s.%N)
echo "Start time: $res1"
echo "Stop time:  $res2"


printf "Elapsed:    %.3F\n"  $(echo "$res2 - $res1"|bc )

